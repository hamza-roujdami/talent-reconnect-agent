# =============================================================================
# Talent Reconnect Agent - Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Azure AI Foundry Project
# -----------------------------------------------------------------------------
# Get from Azure AI Foundry → Project → Overview → Project endpoint
PROJECT_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project

# Model deployment names (must exist in your AI project)
FOUNDRY_MODEL_PRIMARY=gpt-4o-mini
FOUNDRY_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Azure AI Search
# -----------------------------------------------------------------------------
# Search service endpoint and admin key
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_API_KEY=your-admin-key

# Index names (for data scripts only)
SEARCH_RESUME_INDEX=resumes
SEARCH_FEEDBACK_INDEX=feedback

# -----------------------------------------------------------------------------
# Foundry IQ Knowledge Bases
# -----------------------------------------------------------------------------
# Setup: python data/09-create-knowledge-bases.py
# Then:  python data/10-create-mcp-connections.py

# Knowledge base names (created in Azure AI Search)
RESUMES_KB_NAME=resumes-kb
FEEDBACK_KB_NAME=feedback-kb

# MCP connection names (created in Foundry project)
RESUMES_KB_CONNECTION=resumes-kb-mcp
FEEDBACK_KB_CONNECTION=feedback-kb-mcp

# Project Resource ID (for creating MCP connections via ARM API)
# Find in Azure Portal → Your Foundry Project → Properties → Resource ID
# PROJECT_RESOURCE_ID=/subscriptions/.../resourceGroups/.../providers/Microsoft.MachineLearningServices/workspaces/.../projects/...

# -----------------------------------------------------------------------------
# Observability (optional)
# -----------------------------------------------------------------------------
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# -----------------------------------------------------------------------------
# Session Storage (optional - falls back to in-memory)
# -----------------------------------------------------------------------------
# Cosmos DB endpoint for persistent sessions
# Get from Azure Portal → Cosmos DB → Overview → URI
# Uses DefaultAzureCredential (no key needed if RBAC configured)
# COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
# COSMOS_DATABASE=talent-reconnect
# COSMOS_CONTAINER=sessions

# -----------------------------------------------------------------------------
# Long-term Memory (Foundry Memory - preview)
# -----------------------------------------------------------------------------
# Enable cross-session memory for user preferences and conversation summaries
# Requires embedding model deployment (text-embedding-3-small)
ENABLE_MEMORY=true