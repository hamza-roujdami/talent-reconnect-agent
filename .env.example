# =============================================================================
# Azure AI Foundry Configuration
# =============================================================================
# Get these values from your Azure AI Foundry project
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_AI_PROJECT_NAME=your-project-name
AZURE_AI_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project-name
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o-mini-deployment

# =============================================================================
# Azure AI Search (Optional - for production RAG)
# =============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=your-index-name

# =============================================================================
# Azure Services (Optional)
# =============================================================================
AZURE_COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
AZURE_STORAGE_ACCOUNT=your-storage-account

# =============================================================================
# OpenAI-Compatible Inference Endpoint (Required)
# =============================================================================
# Azure AI Foundry inference endpoint
# Format: https://{your-project}.services.ai.azure.com/models
OPENAI_API_BASE=https://your-project.services.ai.azure.com/models
OPENAI_API_KEY=__FOUNDRY_PROJECT_KEY__
OPENAI_MODEL_NAME=gpt-4o-mini-deployment

# =============================================================================
# Authentication
# =============================================================================
# Uses Azure CLI credentials by default (az login)
# No additional API keys needed if using DefaultAzureCredential


# For Azure OpenAI-compatible format
OPENAI_API_BASE=https://api.core42.ai/openai
OPENAI_MODEL_NAME=gpt-4o  # or jais-30b-chat, etc.
OPENAI_API_KEY=your_core42_api_key

# OR for OpenAI-compatible format  
OPENAI_API_BASE=https://api.core42.ai/v1
OPENAI_MODEL_NAME=gpt-4o
OPENAI_API_KEY=your_core42_api_key