# Microsoft Foundry (Azure AI)
FOUNDRY_CHAT_ENDPOINT=https://your-aoai-resource.openai.azure.com/
FOUNDRY_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project
FOUNDRY_MODEL_PRIMARY=gpt-4o-mini
FOUNDRY_MODEL_FAST=gpt-4o
FOUNDRY_MODEL_NANO=gpt-4.1-nano

# Azure AI Search (resumes + feedback)
SEARCH_SERVICE_ENDPOINT=https://your-search.search.windows.net
SEARCH_SERVICE_API_KEY=your-admin-key
SEARCH_RESUME_INDEX=resumes
SEARCH_FEEDBACK_INDEX=feedback
AZURE_SEARCH_MODE=agentic
AZURE_FEEDBACK_MODE=agentic
AZURE_SEARCH_SEMANTIC_CONFIG=default
SEARCH_FEEDBACK_SEMANTIC_CONFIG=feedback-semantic

# Optional agentic search fallbacks (only when no KB name is provided)
AZURE_OPENAI_RESOURCE_URL=https://your-aoai-resource.openai.azure.com
AZURE_OPENAI_AGENTIC_DEPLOYMENT=gpt-4o-mini
